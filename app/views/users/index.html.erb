<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>つぶやき一覧</h1>
      <%= link_to "つぶやく", new_user_path, class: 'btn btn-default' %>
    <% @users.each do |user| %>
    <div class="row">
      <h4><strong><%= user.title %></strong></h4>
      <p><%= user.content %></p>
      <%= link_to "編集", edit_user_path(user.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>