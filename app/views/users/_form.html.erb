
<%= form_for(@user, url: choose_new_or_edit) do |f| %>
 <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <br>
 <%= f.label :内容 %>
 <%= f.text_field :content, class: 'form-control' %>
 <br>
 <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to"つぶやき一覧",users_path %>